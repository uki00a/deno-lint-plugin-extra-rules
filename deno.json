{
  "name": "@uki00a/deno-lint-plugin-extra-rules",
  "version": "0.5.1",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "check": {
      "dependencies": ["check:lint", "check:types"]
    },
    "check:lint": "deno fmt --check && deno lint --ignore=testdata",
    "check:types": "deno check mod.ts testdata",
    "test": "deno test --allow-read=. ./tests",
    "test:e2e": {
      "description": "Checks if `deno lint` fails as expected",
      "command": "! deno lint testdata"
    }
  },
  "lint": {
    "rules": {
      "include": [
        "no-console"
      ]
    },
    "plugins": ["./mod.ts"]
  },
  "exclude": ["./tmp"],
  "publish": {
    "exclude": [
      "./testdata",
      "./tests",
      "./**/*.test.ts",
      ".github/",
      "./.*"
    ]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/expect": "jsr:@std/expect@^1.0.13"
  }
}
